{
  "name": "@stellarkit/core",
  "version": "0.1.0",
  "type": "module",
  "description": "Core package for StellarKit â€” base layout, SEO utilities, analytics injection, and form handling.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./src/*": {
      "import": "./src/*"
    },
    "./dist/*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.astro",
    "lint:fix": "eslint src --ext .ts,.astro --fix",
    "format": "prettier --write src",
    "prepare": "husky install",
    "publish-packages": "changeset publish"
  },
  "peerDependencies": {
    "astro": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "astro": "^5.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-astro": "^1.2.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.56.0"
  },
  "keywords": [
    "astro",
    "seo",
    "marketing",
    "forms",
    "analytics"
  ],
  "author": "StellarKit Contributors",
  "license": "MIT"
}
